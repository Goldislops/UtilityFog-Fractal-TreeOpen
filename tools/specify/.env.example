# Specify Design Token Configuration
# Copy this file to .env and fill in your actual tokens

# Specify API Configuration
SPECIFY_API_TOKEN=your_specify_api_token_here
SPECIFY_REPOSITORY_ID=your_repository_id_here
SPECIFY_ORGANIZATION_ID=your_organization_id_here

# Optional: Specify API Base URL (defaults to https://api.specify.app)
SPECIFY_API_BASE_URL=https://api.specify.app

# CI/CD Configuration
# Set to 'mock' for development, 'live' for production
SPECIFY_MODE=mock

# Mock Configuration (used when SPECIFY_MODE=mock)
MOCK_DESIGN_TOKENS_PATH=./mock-tokens.json

# Output Configuration
OUTPUT_FORMAT=css,scss,js,json
OUTPUT_DIRECTORY=./output

# Logging
LOG_LEVEL=info
