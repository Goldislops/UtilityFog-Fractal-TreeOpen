# Specify Design Tokens Configuration
# Copy this file to .env and configure your Specify API credentials

# =============================================================================
# SPECIFY API CREDENTIALS
# =============================================================================

# Your Specify API token (required for live mode)
# Get this from: https://app.specify.io/settings/api-tokens
SPECIFY_API_TOKEN=your_api_token_here

# Your Specify repository ID (required for live mode)
# Find this in your Specify repository URL or API
SPECIFY_REPOSITORY_ID=your_repository_id_here

# Your Specify organization ID (required for live mode)
# Find this in your Specify organization settings
SPECIFY_ORGANIZATION_ID=your_organization_id_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Operation mode: 'live' or 'mock' (default: auto-detected)
# - 'live': Fetch tokens from Specify API
# - 'mock': Use local mock data for development
SPECIFY_MODE=auto

# Log level for debugging (default: info)
# Options: debug, info, warning, error
LOG_LEVEL=info

# Token categories to process (default: all)
# Comma-separated list: colors,spacing,typography,shadows,borders
TOKEN_CATEGORIES=all

# Output directory for generated tokens (default: output)
OUTPUT_DIR=output

# =============================================================================
# ADVANCED OPTIONS
# =============================================================================

# API request timeout in seconds (default: 30)
API_TIMEOUT=30

# Retry attempts for failed API calls (default: 3)
API_RETRY_ATTEMPTS=3

# Enable/disable specific output formats (default: all enabled)
GENERATE_CSS=true
GENERATE_SCSS=true
GENERATE_JS=true
GENERATE_JSON=true

# Custom naming convention for CSS custom properties
# Options: kebab-case, camelCase, snake_case (default: kebab-case)
CSS_NAMING_CONVENTION=kebab-case

# Include token descriptions in output files (default: true)
INCLUDE_DESCRIPTIONS=true
