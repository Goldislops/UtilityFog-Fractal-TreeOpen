/**
 * Design Tokens - CSS Custom Properties
 * Generated from Specify Design System
 * Do not edit this file directly
 */

:root {
{{#each tokens}}
  --{{kebabCase @key}}: {{#if (eq type 'color')}}{{rgbFromHex value}}{{else}}{{value}}{{/if}}; /* {{type}} */
{{/each}}
}

/* Semantic token aliases for better readability */
:root {
  /* Policy-specific semantic tokens */
  --policy-allow: var(--semantic-policy-allow);
  --policy-deny: var(--semantic-policy-deny);
  --policy-warning: var(--semantic-policy-warning);
  --policy-info: var(--semantic-policy-info);
  
  /* Test result semantic tokens */
  --test-pass: var(--semantic-test-pass);
  --test-fail: var(--semantic-test-fail);
  --test-pending: var(--semantic-test-pending);
  --test-skipped: var(--semantic-test-skipped);
  
  /* Common semantic aliases */
  --success: var(--semantic-success);
  --error: var(--semantic-error);
  --warning: var(--semantic-warning);
  --info: var(--semantic-info);
}

/* Utility classes for quick token usage */
.token-color-primary { color: rgb(var(--color-primary-500)); }
.token-color-success { color: rgb(var(--semantic-success)); }
.token-color-error { color: rgb(var(--semantic-error)); }
.token-color-warning { color: rgb(var(--semantic-warning)); }
.token-color-info { color: rgb(var(--semantic-info)); }

.token-bg-primary { background-color: rgb(var(--color-primary-500)); }
.token-bg-success { background-color: rgb(var(--semantic-success)); }
.token-bg-error { background-color: rgb(var(--semantic-error)); }
.token-bg-warning { background-color: rgb(var(--semantic-warning)); }
.token-bg-info { background-color: rgb(var(--semantic-info)); }

.token-font-sans { font-family: var(--font-family-sans); }
.token-font-mono { font-family: var(--font-family-mono); }

.token-text-xs { font-size: var(--font-size-xs); }
.token-text-sm { font-size: var(--font-size-sm); }
.token-text-base { font-size: var(--font-size-base); }
.token-text-lg { font-size: var(--font-size-lg); }
.token-text-xl { font-size: var(--font-size-xl); }

.token-spacing-xs { margin: var(--spacing-xs); }
.token-spacing-sm { margin: var(--spacing-sm); }
.token-spacing-md { margin: var(--spacing-md); }
.token-spacing-lg { margin: var(--spacing-lg); }
